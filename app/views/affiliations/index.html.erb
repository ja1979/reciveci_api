<h1 class="text-center"><%=t('affiliations.title')%></h1>
<br>
<div class="container">
<div class="col-md-2 col-md-offset-5 col-sm-offset-6">
<%= link_to new_affiliation_path do%>
  <span class="glyphicon glyphicon-plus-sign" data-toggle="tooltip" title=<%=t('general.new')%>></span>
<% end %>
</div>
</div>
<table class="table table-hover">
  <thead>
    <tr>
      <th><%=t('affiliations.name')%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @affiliations.each do |affiliation| %>
      <tr>
        <td><%= affiliation.name %></td>
        <td><%= link_to  affiliation do%>
        <span class="glyphicon glyphicon-eye-open" data-toggle="tooltip" title=<%=t('general.show')%>></span>
<% end %>
        </td>

        <td><%= link_to edit_affiliation_path(affiliation) do%>
<span class="glyphicon glyphicon-edit" data-toggle="tooltip" title=<%=t('general.edit')%>></span>
<% end %>
        </td>
        <td><%= link_to  affiliation, method: :delete, data:{confirm:t('general.confirm')}  do%>
        <span class="glyphicon glyphicon-remove-sign" data-toggle="tooltip" title=<%=t('general.remove')%>></span>
<% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>





     
