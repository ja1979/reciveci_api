<h1 class="text-center">Lista de Asociaciones</h1>
<br>
<div class="row">
<div class="col-md-2 col-md-offset-5 col-sm-offset-6">
<%= link_to new_affiliation_path do%>
  <span class="glyphicon glyphicon-plus-sign"></span>
<% end %>
</div>
</div>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Nombre:</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @affiliations.each do |affiliation| %>
      <tr>
        <td><%= link_to  affiliation.name,affiliation %></td>
        
        </td>

        <td><%= link_to edit_affiliation_path(affiliation) do%>
<span class="glyphicon glyphicon-edit" ></span>
<% end %>
        </td>
        <td><%= link_to  affiliation, method: :delete, data:{confirm:'Esta Seguro?'} do%>
        <span class="glyphicon glyphicon-remove-sign"></span>
<% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>





     
