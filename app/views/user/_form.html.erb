<div class="row">
<div class="col-md-6">


<% @user.errors.full_messages.each do |message|%>
    <div class="alert alert-danger">
      * <%= message %>
    </div>
  <%end%>


  

<div class="form-group ">
	<p><%= f.label :Nombre_Usuario %><br />
	<%= f.text_field :username ,:class=>"form-control"%></p>
</div>

<div class="form-group  ">
	<p><%= f.label :Correo %><br />
	<%= f.text_field :email ,:class=>"form-control"%></p>
</div>

<div class="form-group  ">
	<p><%= f.label :contraseña %><em>(8 caracteres mínimo)</em><br />
	<%= f.password_field :password,:class=>"form-control" %></p>
</div>

<div class="form-group  ">
	<p><%= f.label :Confirmar_contraseña %><br />
	<%= f.password_field :password_confirmation ,:class=>"form-control"%></p>
</div>

<div class="form-group  ">
	<% if can? :manage, User%>
	<%= f.collection_select :role, User::Roles, :to_s, :humanize ,{prompt:"Selecione un rol....."},{class:"form-control"}%>
	<% end %>
</div>

<div class="form-group  ">
	<p><%= f.submit "Crear/Actualizar",:class=>"btn btn-primary" %></p>
	<%= link_to "Atras", :back  %>
</div>	
</div>
</div>
