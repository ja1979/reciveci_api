<!DOCTYPE html>
<html>
  <head>
    <title>Rails4Example</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div class="container">
    	<p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      <p class="error"><%= flash[:error] %></p>

      <div id="user_nav">
      	<% if user_signed_in? %>
      	Bienvenido <%= current_user.email %>
      	<%= link_to "Cerrar Sesión", destroy_user_session_path %>
      	<% else %>
      	<%= link_to "Iniciar Sesión", new_user_session_path %>
      	<% end %>	
      </div>

      <% if user_signed_in? %>
        <div class="admin">
          <% if can? :manage, User %>
            <%= link_to "Crear Usuario", new_user_path %>
          <% end %>
          <%= link_to "Mi Cuenta", edit_user_registration_path %>
        </div>
      <% end %>

      <%= yield %>
        
    </div>
  </body>
</html>
