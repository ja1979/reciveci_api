<% if can? :manage, User %>
  <table class="table table-hover">
	  <tr>
	    <th><%=t('dashboard.username')%></th>
	    <th><%=t('dashboard.email')%></th>
	    <th><%=t('dashboard.rol')%></th>
	    <th colspan="3"></th>
	  </tr>
  <% @users.each do |user| %>
    <tr>    
    	<td><%= user.username %> </td> 
    	<td><%= user.email %></td> 
    	<td><%= user.role %></td> 
    	<td><%= user.password %></td>    	
    	<td><%= link_to "Edit User", edit_user_path(user) %></td> 
      <td><%= link_to "Delete User", user, :method => :delete, data: {:confirm => "Estas seguro?"} %></td>   	
    </tr>
  <% end %>
</table>
<% else %>
  <!-- aqui deberia mostrarse un menu de navegacion para el autor -->
<% end %>
