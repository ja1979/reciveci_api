<h1>Listing recycling_ways</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Subcategory</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recycling_ways.each do |recycling_way| %>
      <tr>
        <td><%= recycling_way.title %></td>
        <td><%= recycling_way.description %></td>
        <td><%= recycling_way.subcategory ? recycling_way.subcategory.name : nil %></td>
        <td><%= link_to 'Show', recycling_way %></td>
        <td><%= link_to 'Edit', edit_recycling_way_path(recycling_way) %></td>
        <td><%= link_to 'Destroy', recycling_way, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

