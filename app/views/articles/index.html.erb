
<%= stylesheet_link_tag "articles" %>
<h1 class="text-center">Noticias</h1>
<div class="container">

<div class="text-center">

  <%= link_to new_article_path do %>
    <span class="glyphicon glyphicon-file " data-toggle="tooltip" title="nuevo"></span>
  <% end %>
</div>

</div>
<br>
<table class="table table-hover">
  <tr>
    <th>Titulo</th>
    <th>Contenido</th>
    <th colspan="3"></th>
  </tr>
  <% @articles.each do |article| %>
    <tr>
      <td> <%= link_to article.title, article_path(article)%></td>
      <td><%= article.content %></td>
      <td><%= link_to  edit_article_path(article) do%>
          <span class="glyphicon glyphicon-edit" data-toggle="tooltip" title="editar"></span>
          <% end %>
      </td>
      <td><%= link_to  article_path(article),method: :delete,data: { confirm: 'Esta seguro?'} do%>
        <span class="glyphicon glyphicon-remove-sign" data-toggle="tooltip" title="eliminar"></span>
        <% end %>
      </td>
    
    </tr>
  <% end %>
</table>