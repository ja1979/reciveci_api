
<form ng-submit="save()" name="newArticle">
	<h1 class="text-center">Nuevo Articulo</h1>
  <div class="alert alert-danger"></div>

  <div class="form-group">
    <label for="title">Titulo</label>
    <input type="text" name="title" placeholder="Titulo" ng-model="article.title">
  </div>
 
  <div class="form-group">
    <label for="content">Contenido</label>
    <input type="text" name="content" placeholder="Contenido" ng-model="article.content">
  </div>

  <div class="form-group">
    <input type="file"  ngf-select ng-model="article.file">
  </div>     

  <div class="form-group">
    <input type="submit" value="Guardar">
  </div>
</form>



