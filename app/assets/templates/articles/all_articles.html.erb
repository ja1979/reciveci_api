<div id="articles" ng-controller="articlesIdCtrl">
	<h1 class="text-center">Noticias</h1>

	<div ui-view="show-article"></div> 
	<table class="table table-hover">
	  <tr>
	    <th>Titulo</th>
	    <th>Contenido</th>
	    <th colspan="3"></th>
	  </tr>
    <tr ng-repeat="article in articles">
      <td><a ui-sref=".id({id: article.id})">{{article.title}}</a></td>
      <td>{{article.content}}</td>
      <td><a ng-click="remove_article(article)"><span class="glyphicon glyphicon-remove-sign" data-toggle="tooltip" title="eliminar" ></span></a></td>
    </tr>
	</table>
	
</div>